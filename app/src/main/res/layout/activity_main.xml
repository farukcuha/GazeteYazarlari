<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:layout_margin="4dp"
                        android:id="@+id/sabah"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sabah"
                        android:onClick="onClick"
                        />

                    <ImageView
                        android:padding="10dp"
                        android:onClick="onClick"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:id="@+id/haberturk"
                        android:layout_weight="1"
                        android:src="@drawable/haberturk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/hurriyet"
                        android:padding="10dp"
                        android:onClick="onClick"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hurriyet"

                        />
                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:id="@+id/karar"
                        android:layout_weight="1"
                        android:src="@drawable/karar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/sozcu"
                        android:padding="5dp"
                        android:onClick="onClick"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sozcu"

                        />
                    <ImageView
                        android:id="@+id/milliyet"
                        android:padding="5dp"
                        android:onClick="onClick"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:layout_weight="1"
                        android:src="@drawable/milliyet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/turkiye"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/turkiye"
                        android:onClick="onClick"

                        />

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/yenisafak"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        android:layout_weight="1"
                        android:src="@drawable/yenisafak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/akit"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/akit"
                        android:onClick="onClick"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"


                        />



                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/takvim"
                        android:layout_weight="1"
                        android:src="@drawable/takvim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:background="@drawable/box"
                        android:layout_margin="4dp"

                        />



                </LinearLayout>
            </LinearLayout>
        </ScrollView>



</LinearLayout>